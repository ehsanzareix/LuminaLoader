{
  "name": "lumina-loader",
  "private": true,
  "version": "1.1.0",
  "description": "Lightweight, framework-agnostic loader with custom logo support",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "tsup",
    "build:core": "tsup packages/core/src/index.ts --format cjs,esm --dts --out-dir packages/core/dist",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:visual": "playwright test",
    "test:visual:ci": "http-server storybook-static -p 6006 -c-1 & npx playwright test --config=playwright.config.ts --reporter=github",
    "size": "bundlesize",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "storybook": "storybook dev -p 6006",
    "storybook:vue": "storybook dev -c .storybook-vue -p 6007",
    "build-storybook": "storybook build",
    "build-storybook:vue": "storybook build -c .storybook-vue -o storybook-vue-static",
    "release": "semantic-release",
    "changeset": "changeset",
    "prepare": "husky install",
    "prepack": "npm run build"
  },
  "bundlesize": [
    {
      "path": "dist/index.mjs",
      "maxSize": "10kB"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ehsanzareix/LuminaLoader.git"
  },
  "keywords": [
    "loader",
    "spinner",
    "lumina",
    "loading"
  ],
  "author": "Ehsan Zarei",
  "license": "MIT",
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.28.0",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@playwright/test": "^1.36.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^10.0.4",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.3.5",
    "@semantic-release/npm": "^9.0.2",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "@size-limit/preset-small-lib": "^12.0.0",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/builder-vite": "^8.6.15",
    "@storybook/react-vite": "^8.6.15",
    "@storybook/testing-library": "^0.2.1",
    "@storybook/vue3": "^8.6.15",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.0.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "@vitejs/plugin-vue": "^6.0.3",
    "@vue/compiler-sfc": "^3.5.26",
    "@vue/test-utils": "^2.4.0-alpha.2",
    "bundlesize": "^0.18.2",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^8.8.0",
    "http-server": "^14.1.1",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "playwright": "^1.36.0",
    "prettier": "^3.7.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "semantic-release": "^23.1.1",
    "size-limit": "^12.0.0",
    "storybook": "^8.6.15",
    "tsup": "^8.5.1",
    "typescript": "^5.3.0",
    "vitest": "^4.0.16",
    "vue": "^3.5.26"
  }
}
